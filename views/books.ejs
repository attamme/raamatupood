
<h1>Raamatute nimekiri</h1>

<div class="book-grid">
  <% if (books.length === 0) { %>
    <p>Raamatuid ei leitud.</p>
  <% } else { %>
      <% books.forEach(book => { %>
        <a href="/books/<%= book.ISBN_kood %>" class="book-item-link">
        <div class="book-item">
          <h2><%= book.pealkiri %></h2>
          <p><strong>Aasta:</strong> <%= book.aasta %></p>
          <p><strong>Hind:</strong> <%= book.hind %> â‚¬</p>
          <p><strong>Autor:</strong> <%= book.AUTORID?.nimi %></p>
          <p><strong>Kirjastus:</strong> <%= book.KIRJASTAD?.nimi %></p>
          <p><strong>Kogus laos:</strong> <%= book.LAOSEISUD?.kogus %></p>

          <!-- Add to cart -->
          <form action="/cart/add" method="POST">
            <input type="hidden" name="isbn" value="<%= book.ISBN_kood %>">
            <button type="submit" class="add-to-cart">Lisa ostukorvi</button>
          </form>
        </div>
      </a>
      <% }) %>
  <% } %>
</div>
